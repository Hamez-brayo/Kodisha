<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilebackground"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profilebackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackBtnProfile"

        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/BackBtnProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/PropertyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserProfile"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/BackBtnProfile"
        android:layout_marginTop="16dp"


        />

    <ImageView
        android:id="@+id/CallBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circlebuttons"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="383dp"
        app:layout_constraintTop_toTopOf="@id/profilebackground"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"/>
    <ImageView
        android:id="@+id/MesssageBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circlebuttons"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="383dp"
        app:layout_constraintTop_toTopOf="@id/profilebackground"
        app:layout_constraintStart_toEndOf="@id/CallBtn"
        app:layout_constraintEnd_toStartOf="@id/MailBtn"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:id="@+id/MailBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circlebuttons"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="383dp"
        app:layout_constraintTop_toTopOf="@id/profilebackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/CallIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_call_24"
        tools:layout_editor_absoluteY="276dp"
        app:layout_constraintStart_toStartOf="@id/CallBtn"
        app:layout_constraintEnd_toEndOf="@id/CallBtn"
        app:layout_constraintTop_toTopOf="@id/CallBtn"
        app:layout_constraintBottom_toBottomOf="@id/CallBtn"/>

    <ImageView
        android:id="@+id/MailIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_mail_outline_24"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="230dp"
        app:layout_constraintStart_toStartOf="@id/MailBtn"
        app:layout_constraintEnd_toEndOf="@id/MailBtn"
        app:layout_constraintTop_toTopOf="@id/MailBtn"
        app:layout_constraintBottom_toBottomOf="@id/MailBtn"/>

    <ImageView
        android:id="@+id/MessageIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_message_24"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="139dp"
        app:layout_constraintTop_toTopOf="@id/MesssageBtn"
        app:layout_constraintBottom_toBottomOf="@id/MesssageBtn"
        app:layout_constraintStart_toStartOf="@id/MesssageBtn"
        app:layout_constraintEnd_toEndOf="@id/MesssageBtn"
        />

    <TextView
        android:id="@+id/NameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="32sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/CallBtn"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/EmailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="32sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/NameTv"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/PhoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textSize="32sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/EmailTv"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/PassTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="32sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/PhoneTV"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/NameTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="26sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/NameTv"
        app:layout_constraintTop_toBottomOf="@id/MesssageBtn"
        app:layout_constraintEnd_toStartOf="@id/NameEditBtn"
        app:layout_goneMarginTop="8dp"
        app:layout_goneMarginStart="16dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/EmailTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Johndoe@gmail.com"
        android:textSize="26sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@id/EmailTv"
        app:layout_constraintTop_toBottomOf="@id/NameTE"
        app:layout_constraintEnd_toStartOf="@id/EmailEditBtn"
        app:layout_goneMarginTop="8dp"
        app:layout_goneMarginStart="16dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/ContactTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+25476578765"
        android:textSize="26sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/PhoneTV"
        app:layout_constraintTop_toBottomOf="@id/EmailTE"
        app:layout_constraintEnd_toStartOf="@id/ContactEditBtn"
        app:layout_goneMarginTop="18dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />
    <TextView
        android:id="@+id/PassTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*******"
        android:textSize="26sp"
        android:fontFamily="@font/arsenal_bold"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/PassTv"
        app:layout_constraintTop_toBottomOf="@id/ContactTE"
        app:layout_constraintEnd_toStartOf="@id/PasswordEditBtn"
        app:layout_goneMarginTop="18dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="419dp" />

    <ImageView
        android:id="@+id/NameEditBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_edit_note_24"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="379dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/MailBtn"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/EmailEditBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_edit_note_24"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="379dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/NameEditBtn"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/ContactEditBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_edit_note_24"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="379dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/EmailEditBtn"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/PasswordEditBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_edit_note_24"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="379dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/ContactEditBtn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="631dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>