<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyOrRent_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundWhite"
        app:layout_constraintStart_toStartOf="@+id/BackgroundBlue"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/BackgroundBlue"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BackgroundWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/BackgroundWhite"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:src="@drawable/backgroundwhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/BackgroundBlue"/>

    <TextView
        android:id="@+id/BuyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display"
        android:text="BUY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="56sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/Selltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RENT"
        app:layout_constraintStart_toStartOf="@+id/BackgroundWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/playfair_display"
        android:textSize="56sp"
        android:textColor="@color/background"/>

</androidx.constraintlayout.widget.ConstraintLayout>