<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <ImageView
       android:id="@+id/splashBackground"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:adjustViewBounds="true"
       android:scaleType="centerCrop"
       android:src="@drawable/splash"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:tintMode="src_atop"
       app:tint="#6F000000"
       app:layout_constraintVertical_bias="0.0" />

   <ImageView
       android:id="@+id/Logo"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/ic_baseline_house_24"
       app:layout_constraintTop_toBottomOf="@id/Keja"
       android:layout_marginTop="8dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:tintMode="src_over"
       app:tint="#6F000000" />

   <TextView
       android:id="@+id/Keja"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/arsenal_bold"
       android:text="KEJANI PROPERTIES"
       android:textColor="#FFFFFF"
       android:textSize="40sp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="170dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />
   <TextView
       android:id="@+id/KejaS"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/arsenal_bold"
       android:text="MOVE TO WHAT"
       android:textColor="#FFFFFF"
       android:textSize="34sp"
       app:layout_constraintTop_toBottomOf="@id/Logo"
       android:layout_marginTop="8dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>
   <TextView
       android:id="@+id/KejaSP"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/arsenal_bold"
       android:text="MOVES YOU"
       android:textColor="#FFFFFF"
       android:textSize="34sp"
       app:layout_constraintTop_toBottomOf="@id/KejaS"
       android:layout_marginTop="8dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>