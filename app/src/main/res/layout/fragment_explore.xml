<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explore">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ExploreMenu"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Where are you going?"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/white"
        app:boxStrokeColor="#FFFFFF"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toEndOf="@+id/ExploreMenu"
        app:layout_constraintEnd_toStartOf="@+id/ProfileCircle"
        app:layout_constraintBottom_toTopOf="@+id/OnSaleTV"
        android:layout_marginBottom="16dp">

        <EditText

            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ProfileCircle"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/profile_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/ProfileCircle"
        app:layout_constraintEnd_toEndOf="@+id/ProfileCircle"
        app:layout_constraintStart_toStartOf="@+id/ProfileCircle"
        app:layout_constraintTop_toTopOf="@+id/ProfileCircle" />

    <TextView
        android:id="@+id/OnSaleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On Sale"
        app:layout_constraintTop_toBottomOf="@+id/ExploreMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/placeholder1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imagebackground"
        app:layout_constraintTop_toBottomOf="@+id/OnSaleTV"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <ImageView
        android:id="@+id/placeholder2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imagebackground"
        app:layout_constraintTop_toBottomOf="@+id/placeholder1"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <ImageView
        android:id="@+id/placeholder3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imagebackground"
        app:layout_constraintTop_toBottomOf="@+id/placeholder2"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/Listing1Image"
        android:layout_width="202dp"
        android:layout_height="166dp"
        android:src="@drawable/listing1"
        app:layout_constraintStart_toStartOf="@+id/placeholder1"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/placeholder1"
        app:layout_constraintBottom_toBottomOf="@id/placeholder1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="143dp" />
    <TextView
        android:id="@+id/Listing1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Dream"
        app:layout_constraintTop_toTopOf="@id/placeholder1"
        app:layout_constraintStart_toEndOf="@id/Listing1Image"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/background"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/Listing1TVDes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living room"
        app:layout_constraintTop_toBottomOf="@id/Listing1TV"
        app:layout_constraintStart_toEndOf="@id/Listing1Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/Listing1TVDes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedroom"
        app:layout_constraintTop_toBottomOf="@id/Listing1TVDes1"
        app:layout_constraintStart_toEndOf="@id/Listing1Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/Listing1TVDes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen"
        app:layout_constraintTop_toBottomOf="@id/Listing1TVDes2"
        app:layout_constraintStart_toEndOf="@id/Listing1Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/listing1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.4M kes"
        app:layout_constraintTop_toBottomOf="@+id/Listing1TVDes3"
        app:layout_constraintStart_toEndOf="@id/Listing1Image"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/Listing2Image"
        android:layout_width="210dp"
        android:layout_height="168dp"
        android:src="@drawable/listin2"
        app:layout_constraintStart_toStartOf="@id/placeholder2"
        app:layout_constraintTop_toTopOf="@id/placeholder2"
        app:layout_constraintBottom_toBottomOf="@id/placeholder2"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="364dp" />
    <TextView
        android:id="@+id/Listing2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel Dream"
        app:layout_constraintTop_toTopOf="@id/placeholder2"
        app:layout_constraintStart_toEndOf="@id/Listing2Image"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/background"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/Listing2TVDes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swimming pool"
        app:layout_constraintTop_toBottomOf="@id/Listing2TV"
        app:layout_constraintStart_toEndOf="@id/Listing2Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/Listing2TVDes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sauna"
        app:layout_constraintTop_toBottomOf="@id/Listing2TVDes1"
        app:layout_constraintStart_toEndOf="@id/Listing2Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/Listing2TVDes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gardens"
        app:layout_constraintTop_toBottomOf="@id/Listing2TVDes2"
        app:layout_constraintStart_toEndOf="@id/Listing2Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/listing2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.4M kes"
        app:layout_constraintTop_toBottomOf="@+id/Listing2TVDes3"
        app:layout_constraintStart_toEndOf="@id/Listing2Image"
        android:layout_marginStart="8dp"
        />


    <ImageView
        android:id="@+id/Listing3Image"
        android:layout_width="210dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/listing3"
        app:layout_constraintBottom_toBottomOf="@id/placeholder3"
        app:layout_constraintStart_toStartOf="@id/placeholder3"
        app:layout_constraintTop_toTopOf="@id/placeholder3" />

    <TextView
        android:id="@+id/Listing3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage"
        app:layout_constraintTop_toTopOf="@id/placeholder3"
        app:layout_constraintStart_toEndOf="@id/Listing3Image"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/background"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/Listing3TVDes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spacious"
        app:layout_constraintTop_toBottomOf="@id/Listing3TV"
        app:layout_constraintStart_toEndOf="@id/Listing3Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/Listing3TVDes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modern"
        app:layout_constraintTop_toBottomOf="@id/Listing3TVDes1"
        app:layout_constraintStart_toEndOf="@id/Listing3Image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/background"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/listing3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500k kes"
        app:layout_constraintTop_toBottomOf="@+id/Listing3TVDes2"
        app:layout_constraintStart_toEndOf="@id/Listing3Image"
        android:layout_marginStart="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>